<h1>create survey</h1>
<h2>survey name: <%= @survey.name %></h2>
<h3>survey id: <%= @survey.id %></h3>
<!--  one survey; X questions; 4 answers -->
<% @survey.questions.each_with_index do |question, index| %>
  <form action = "/build_survey" method="POST">
    <input type="hidden" name="survey" value="<%= @survey.id %>"
    <div class="each_question">
      <label for="question<%= index + 1 %> ">Question #<%= index + 1 %></label>
      <input id="question<%= index + 1 %>" type="text" name="question[text<%= index + 1 %>">
        <% question.choices.each_with_index do |choice, index| %>
        <ul>
        <li><label for="choice<%= index + 1 %>">Choice <%= index + 1 %></label>
        <input id="choice<%= index + 1 %>" type="text" name="choice[choice<%= index + 1%>"></li>
        </ul>
        <% end %>
    <div>
      <% end %>
    <input type="Submit">
  </form>

